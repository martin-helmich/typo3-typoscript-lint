{
    "name": "helmich/typo3-typoscript-lint",
    "description": "Static code analysis for the TypoScript configuration language.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/martin-helmich",
    "authors": [
        {
            "name": "Martin Helmich",
            "email": "m.helmich@mittwald.de",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/martin-helmich/typo3-typoscript-lint/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.4",
        "symfony/console": "2.4.*",
        "symfony/dependency-injection": "2.4.*",
        "symfony/config": "2.4.*",
        "symfony/yaml": "2.4.*",
        "symfony/finder": "~2.4.0",
        "symfony/event-dispatcher": "~2.4.0",
        "helmich/typo3-typoscript-parser": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1.0"
    },
    "bin": [
        "typoscript-lint"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Helmich\\TypoScriptLint": "src/"
        }
    }
}
